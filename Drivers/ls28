hostname=$(hostname | cut -f1 -d'.')

if [ $hostname = "ls28" ]
then 
	echo "[Driver] Hello, I am ls28!"
	
	MIRNA_TOOLS_PATH=$(dirname $(readlink -f ${BASH_SOURCE[0]}))
	export MIRNA_TOOLS_PATH=${MIRNA_TOOLS_PATH%/*}

	export PATH=$MIRNA_TOOLS_PATH:$PATH
	
	MIRNA_LIBRARY_PATH=$MIRNA_TOOLS_PATH"/Library"
	export PYTHONPATH=$MIRNA_LIBRARY_PATH:$PYTHONPATH
	export PATH=$MIRNA_LIBRARY_PATH:$PATH
	echo $PYTHONPATH
fi
